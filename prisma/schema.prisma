generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String @unique
  password String

  outfits   Outfit[]
  items     Item[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()
}

model Item {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  type          types
  colour        String
  brand         String
  datePurchased DateTime @db.Date
  image         String
  usage         Int      @default(0)
  lastWorn      Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt()

  outfitsIds String[] @db.ObjectId
  outfits    Outfit[] @relation(fields: [outfitsIds], references: [id])
  User       User?    @relation(fields: [userId], references: [id])
  userId     String?  @db.ObjectId
}

model Outfit {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt()
  log        Boolean   @default(false)
  logDate    DateTime?
  futureDate DateTime?
  itemsIds   String[]  @db.ObjectId
  items      Item[]    @relation(fields: [itemsIds], references: [id])
  User       User?     @relation(fields: [userId], references: [id])
  userId     String?   @db.ObjectId
}

enum types {
  TOP
  BOTTOM
  FOOTWEAR
  ACCESSORY
}
